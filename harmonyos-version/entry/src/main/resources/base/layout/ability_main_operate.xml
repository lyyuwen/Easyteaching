<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability_main">

    <ListContainer
        ohos:id="$+id:List_show_Data"
        ohos:height="200vp"
        ohos:width="250vp"
        ohos:rebound_effect="true"
        ohos:orientation="vertical"/>

    <Text
        ohos:height="20vp"
        ohos:width="80vp"
        ohos:text="$string:correct_progress"
        ohos:text_size="20vp"/>

    <ProgressBar
        ohos:id="$+id:correct_progress"
        ohos:height="50vp"
        ohos:width="250vp"
        ohos:max="100"
        ohos:min="0"
        ohos:orientation="horizontal"
        ohos:progress_width="30vp"
        ohos:progress_color="#FF1E91B5"/>

    <TableLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:row_count="2"
        ohos:column_count="2">

        <Text
            ohos:height="23vp"
            ohos:width="75vp"
            ohos:start_margin="70vp"
            ohos:end_margin="50vp"
            ohos:text="$string:tip_for_students_information_button"
            ohos:text_alignment="horizontal_center"
            ohos:text_size="17vp"/>

        <Text
            ohos:height="23vp"
            ohos:width="50vp"
            ohos:start_margin="50vp"
            ohos:end_margin="100vp"
            ohos:text="$string:tip_for_work_button"
            ohos:text_alignment="horizontal_center"
            ohos:text_size="17vp"/>

        <TableLayout
            ohos:height="match_content"
            ohos:width="135vp"
            ohos:row_count="4"
            ohos:column_count="2"
            ohos:start_margin="20vp"
            ohos:end_margin="5vp"
            ohos:background_element="$graphic:background_ability_main_operate"
            ohos:alignment_type="align_contents">

            <Button
                ohos:id="$+id:Add_student"
                ohos:height="45vp"
                ohos:width="70vp"
                ohos:text="$string:add_student"
                ohos:text_size="13vp"
                ohos:element_top="$media:ic_public_add72"
                ohos:layout_alignment="center"/>

            <Button
                ohos:id="$+id:Del_student"
                ohos:height="45vp"
                ohos:width="70vp"
                ohos:text="$string:del_student"
                ohos:text_size="13vp"
                ohos:element_top="$media:ic_public_delete72"
                ohos:layout_alignment="center"/>

            <Button
                ohos:id="$+id:Edit_student"
                ohos:height="45vp"
                ohos:width="70vp"
                ohos:text="$string:edit_student"
                ohos:text_size="13vp"
                ohos:element_top="$media:ic_public_edit72"
                ohos:layout_alignment="center"/>

            <Button
                ohos:id="$+id:View_student"
                ohos:height="45vp"
                ohos:width="70vp"
                ohos:text="$string:view_student"
                ohos:text_size="13vp"
                ohos:element_top="$media:ic_public_more72"
                ohos:layout_alignment="center"/>

        </TableLayout>

        <TableLayout
            ohos:height="match_content"
            ohos:width="150vp"
            ohos:row_count="2"
            ohos:column_count="2"
            ohos:start_margin="5vp"
            ohos:end_margin="20vp"
            ohos:background_element="$graphic:background_ability_main_operate"
            ohos:alignment_type="align_contents">

            <Button
                ohos:id="$+id:Give_out_work"
                ohos:height="45vp"
                ohos:width="80vp"
                ohos:text="$string:give_out_work"
                ohos:text_size="12vp"
                ohos:element_top="$media:ic_public_upload72"
                ohos:layout_alignment="center"/>

            <Button
                ohos:id="$+id:Upload_answers"
                ohos:height="45vp"
                ohos:width="80vp"
                ohos:text="$string:upload_answers"
                ohos:text_size="12vp"
                ohos:element_top="$media:ic_public_file72"
                ohos:layout_alignment="center"/>

            <Button
                ohos:id="$+id:Upload_work"
                ohos:height="50vp"
                ohos:width="80vp"
                ohos:text="$string:upload_work"
                ohos:text_size="12vp"
                ohos:element_top="$media:ic_public_send72"
                ohos:layout_alignment="center"/>

            <Button
                ohos:id="$+id:Edit_answers"
                ohos:height="50vp"
                ohos:width="80vp"
                ohos:text="$string:edit_answers"
                ohos:text_size="12vp"
                ohos:element_top="$media:ic_public_feedback72"
                ohos:layout_alignment="center"/>

        </TableLayout>

    </TableLayout>

</DirectionalLayout>